{
  "manifest_version": 3,
  "name": "Bantz Browser Bridge",
  "version": "2.0.0",
  "description": "Bantz asistan ile Firefox/Chrome entegrasyonu - Native Messaging, form detection, screenshot",
  "author": "Bantz",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "nativeMessaging",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/element-scanner.js",
        "content/form-detector.js",
        "content/page-extractor.js",
        "content/content.js"
      ],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Bantz Bridge",
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["overlay.css"],
      "matches": ["<all_urls>"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "bantz@bantz.local",
      "strict_min_version": "109.0"
    }
  }
}
